  <section id="header">
      <section id="links">
        <div class="header_link"><%= link_to 'New Building', new_building_path %></div>
          <div id="links_divider"></div>
        <div class="header_link"><%= link_to 'Cities', cities_path %></div>
      </section>
    <section id="link_bottom_divider"></section>
    <h1>Buildings in:</h1>
    <h1>CityName</h1>
    <h1>City ID</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Height</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @buildings.each do |building| %>
        <tr>
          <td><%= building.name %></td>
          <td><%= building.height %></td>
          <td><%= building.city_id %></td>
          <td><%= link_to 'Show', building %></td>
          <td><%= link_to 'Edit', edit_building_path(building) %></td>
          <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <br />
  </section><!-- end of header div -->

  <div id="wrapper">
   <%= render partial: 'building', collection: @buildings.order("height") %>
  </div>
