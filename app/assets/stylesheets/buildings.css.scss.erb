.building {
  width: 40px;
  border: 1px black solid;
  background-color: silver;
  vertical-align: bottom;
  text-align: center;
  margin: auto;
}

.buildingname {
  vertical-align: bottom;
  display: inline-block;
  min-width: 80px;
  border: 2px red solid;
}

.buildingname p {

}

#wrapper {
  display: inline-block;
  vertical-align: bottom;
  position: absolute;
  bottom: 0;
  border: 3px dashed purple;
  text-align: center;
}

#header {
  padding-left: 10px;
  position: absolute;
  z-index: 10;
}
